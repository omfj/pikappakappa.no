{
	"name": "@pikappakappa/web",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:generate-migration": "drizzle-kit generate:pg",
		"db:migrate": "pnpm run exec ./src/lib/db/migrate.ts",
		"db:seed": "pnpm run exec ./src/lib/db/seed.ts",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"exec": "vite-node --options.transformMode.ssr='/.*/'"
	},
	"dependencies": {
		"clsx": "^1.2.1",
		"drizzle-orm": "^0.27.0",
		"marked": "^5.1.0",
		"mdsvex": "^0.11.0",
		"pg": "^8.11.1",
		"svelte-french-toast": "^1.1.0",
		"sveltekit-superforms": "^1.1.2",
		"uuid": "^9.0.0",
		"vite-node": "^0.32.2",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^3.0.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/marked": "^5.0.0",
		"@types/pg": "^8.10.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"drizzle-kit": "^0.19.2",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.24",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.6"
	}
}
